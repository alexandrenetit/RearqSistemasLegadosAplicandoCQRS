@model TravelApplicationNET.Models.Booking

@{
    ViewBag.Title = "Delete";
}

<h2>@ViewBag.Message</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Booking</legend>

    <div class="display-label">HotelName</div>
    <div class="display-field">@Model.HotelName</div>

    <div class="display-label">RoomNb</div>
    <div class="display-field">@Model.RoomNb</div>

    <div class="display-label">Guest</div>
    <div class="display-field">@Model.Guest</div>

    <div class="display-label">StartDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>

    <div class="display-label">EndDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.EndDate)</div>

    <div class="display-label">Price</div>
    <div class="display-field">@String.Format("{0:F}", Model.Price)</div>
    
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


